<!-- header begin -->
<header>
    {{> component-ticker }}
    <div class="uk-section uk-padding-remove-vertical">
        <nav class="uk-navbar-container" data-uk-sticky="show-on-up: true; animation: uk-animation-slide-top;">
            <div class="uk-container" data-uk-navbar>
                <div class="uk-navbar-left uk-width-expand uk-flex uk-flex-between">
                    <a class="uk-navbar-item uk-logo" href="{{root}}index.html">
                        <img src="{{root}}img/in-lazy.gif" data-src="{{root}}{{component.header.siteLogo.src}}" alt="logo" width="{{component.header.siteLogo.width}}" height="{{component.header.siteLogo.height}}" data-uk-img>
                    </a>
                    <ul class="uk-navbar-nav uk-visible@m">
                        {{#each navigation}}
                        <li><a href="{{@root.root}}{{link}}">{{title}}{{#if dropdown.child}}<span data-uk-navbar-parent-icon></span>{{/if}}</a>
                            {{#unless dropdown.childText}}
                            {{#if dropdown.child}}
                            <div class="uk-navbar-dropdown">
                                <ul class="uk-nav uk-navbar-dropdown-nav">
                                    {{#each dropdown.child}}
                                    <li><a href="{{@root.root}}{{link}}">{{title}}{{#if icon}}<i class="fas {{icon}} fa-sm"></i>{{/if}}</a></li>
                                    {{/each}}
                                </ul>
                            </div>
                            {{/if}}
                            {{else}}
                            <div class="uk-navbar-dropdown uk-navbar-dropdown-width-2">
                                <div class="uk-navbar-dropdown-grid uk-child-width-1-2" data-uk-grid>
                                    <div>
                                        <ul class="uk-nav uk-navbar-dropdown-nav">
                                            {{#each dropdown.child}}
                                            <li><a href="{{@root.root}}{{link}}">{{title}}{{#if icon}}<i class="fas {{icon}} fa-sm"></i>{{/if}}</a></li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    <div>
                                        <ul class="uk-nav uk-navbar-dropdown-nav">
                                            <li><a class="uk-disabled" href="#">{{dropdown.childText}}</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {{/unless}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="uk-navbar-right uk-width-auto">
                    <div class="uk-navbar-item uk-visible@m in-optional-nav">
                        <div>
                            <a href="{{#if component.header.signin.external}}{{component.header.signin.url}}{{else}}{{root}}{{component.header.signin.url}}{{/if}}" class="uk-button uk-button-link">{{component.header.signin.title}}</a>
                            <a href="{{#if component.header.signup.external}}{{component.header.signup.url}}{{else}}{{root}}{{component.header.signup.url}}{{/if}}" class="uk-button uk-button-link">{{component.header.signup.title}}</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>
<!-- header end -->
{{#if breadcrumb}}
    {{> component-breadcrumb }}
{{/if}}